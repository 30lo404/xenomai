#
# Xenomai configuration for Linux v2.4
#

dep_tristate 'Philips SJA1000 CAN controller' CONFIG_XENO_DRIVERS_RTCAN_SJA1000 $CONFIG_XENO_DRIVERS_RTCAN

dep_tristate '  Standard ISA devices' CONFIG_XENO_DRIVERS_RTCAN_SJA1000_ISA $CONFIG_XENO_DRIVERS_RTCAN_SJA1000
if [ "$CONFIG_XENO_DRIVERS_RTCAN_SJA1000_ISA" != "n" ]; then
   int '  Maximum number of ISA devices' CONFIG_XENO_DRIVERS_RTCAN_ISA_MAX_DEV 4
fi

if [ "$CONFIG_PCI" = "y" ]; then

dep_tristate '  PEAK PCI cards' CONFIG_XENO_DRIVERS_RTCAN_SJA1000_PEAK_PCI $CONFIG_XENO_DRIVERS_RTCAN_SJA1000

fi


